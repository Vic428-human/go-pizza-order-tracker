{{template "top" .}}
<title>Admin Dashboard - Pizza tracker</title>
</head>

<body class="bg-gradient-to-br from-zinc-200 via-orange-50 to-rose-50 min-h-screen p-8">
    <div class="container mx-auto px-4 md:py-12">
        <div class="max-w-[95%] mx-auto">
            <div class="flex justify-center items-center mb-8">
                <div>
                    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2 tracking-tight">
                        Pizza Tracker
                    </h1>
                    <p class="text-gray-600 text-lg">Track and manage all your pizza orders</p>
                </div>
                <div class="flex items-center gap-4">
                    <span>Welcome, {{.Username}}</span>
                    <form action="/logout" method="POST">
                        <button type="submit"
                            class="px-5 py-2.5 bg-red-500 text-white text-sm rounded-xl hover:bg-red-600 active:scale-95 transition-all shadow-sm">Logout</button>
                    </form>
                </div>

            </div>
            <div class="bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl border border-white overflow-hidden">
                <div class="p-6 md:p-8">
                    <div class="flex items-center mb-8">
                        <h2 class="text-2xl font-bold text-gray-900 mr-2">Active orders</h2>
                        <button onclick="location.reload()"
                            class="text-gray-500 hover:text-gray-700 transition-colors ml-2 p-1.5 rounded-lg hover:bg-gray-100"><span
                                class="text-xl">ðŸ”„</span></button>
                    </div>
                    <div class="w-full overflow-x-auto rounded-xl border border-gray-200">
                        <table class="w-full">
                            <thead>
                                <tr class="bg-gray-50/80 border-b border-gray-200">
                                    <th
                                        class="px-6 py-5 text-left text-sm font-bold text-gray-600 uppercase tracking-tight">
                                        Order ID
                                    </th>
                                    <th
                                        class="px-6 py-5 text-left text-sm font-bold text-gray-600 uppercase tracking-tight">
                                        Status
                                    </th>
                                    <th
                                        class="px-6 py-5 text-left text-sm font-bold text-gray-600 uppercase tracking-tight">
                                        Customer Name
                                    </th>
                                    <th
                                        class="px-6 py-5 text-left text-sm font-bold text-gray-600 uppercase tracking-tight">
                                        Phone
                                    </th>
                                    <th
                                        class="px-6 py-5 text-left text-sm font-bold text-gray-600 uppercase tracking-tight">
                                        Address
                                    </th>
                                    <th
                                        class="px-6 py-5 text-left text-sm font-bold text-gray-600 uppercase tracking-tight">
                                        Pizzas
                                    </th>
                                    <th
                                        class="px-6 py-5 text-left text-sm font-bold text-gray-600 uppercase tracking-tight">
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white/70 divide-y divide-gray-100">
                                {{range .Orders}}
                                <tr class="hover:bg-gray-50/50 transition-colors">
                                    <td class="px-6 py-4 text-sm whitespace-nowrap">
                                        <a href="/customer/{{.ID}}"
                                            class="text-blue-600 hover:text-gray-700 font-medium hover:underline">
                                            {{.ID}}
                                        </a>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-700 whitespace-nowrap font-medium">
                                        {{.Status}}
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-700 whitespace-nowrap">
                                        {{.CustomerName}}
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-600  whitespace-nowrap">
                                        {{.Phone}}
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-600  whitespace-nowrap">
                                        {{.Address}}
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-700">
                                        <div class="space-y-1">
                                            {{range $index, $pizza := .Items}}
                                            <div class="flex items-center gap-2">
                                                <span class="text-gray-400">#{{add $index 1}}</span>
                                                <span class="truncate">{{$pizza.Size}} {{$pizza.Pizza}}</span>
                                                {{if $pizza.Instructions}}
                                                <span class="size-4 text-gray-400 cursor-help"
                                                    title="{{$pizza.Instructions}}">â“˜</span>
                                                {{end}}
                                            </div>
                                            {{end}}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <div class="flex gap-2">
                                        {{/* æ›´æ–°è¨‚å–®è³‡è¨Š */}}
                                            <form action="/admin/order/{{.ID}}/update" method="POST">
                                                <select name="status"
                                                    class="px-3 py-2 text-sm border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-400 focus:border-transparent transition-all bg-white font-medium" onchange="this.form.submit()">
                                                    {{$currentStatus := .Status}}
                                                    {{range $.Statuses}}
                                                    <option {{if eq . $currentStatus}} selected {{end}} value="{{.}}">
                                                        {{.}}
                                                    </option>
                                                    {{end}}
                                                </select>
                                            </form>
                                            <form action="/admin/order/{{.ID}}/delete" method="POST">
                                                <button type="submit"
                                                    class="p-2 text-white bg-red-500 rounded-lg hover:bg-red-600 active:scale-95 focus:outline-none focus:ring-2 focus:ring-red-400 transition-all"
                                                    onclick="return confirm('Are you sure you want to delete this order?')">
                                                    <!-- Cross Icon (Tailwind-compatible) -->
                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                                                        viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                                        class="w-6 h-6">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                    </svg>

                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {{end}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

{{template "bottom" .}}